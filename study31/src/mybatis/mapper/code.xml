<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <!-- namespace : 간단하게 하셔도 됩니다.
 		, 단, 매퍼클래스를 사용하실려면 완전한 이름의 클래스이름으로 지정 	
  -->
<mapper namespace="com.study.code.dao.ICommonCodeDao">
<cache />

<select id="getCodeListByParent" resultType="com.study.code.vo.CodeVO" >
  
	SELECT comm_cd               
		  , comm_nm      
	      , comm_parent      
	      , comm_ord         
	 FROM  comm_code        
	 WHERE comm_parent = #{commParent}
	 ORDER BY comm_ord ASC 	 

  </select>
</mapper>
  